{
	"manifest_version": 2,
	"name": "Canvas AuTOTP",
	"version": "1.0",
	"description": "Securely autofills 2FA codes for Canvas-based sites that support ADFS",
	"author": "Perseus Lynx",
	"browser_specific_settings": {
		"gecko": {
			"id": "canvas-autotp@perseuslynx.dev",
			"strict_min_version": "67.0"
		}
	},
	"browser_action": {
		"default_popup": "form.html#popup",
		"default_area": "navbar"
	},
	"content_scripts": {
		"matches": ["*://adfs.*/adfs/ls/*"],
		"js": ["autotp.js"]
	}
}
