{
	"manifest_version": 2,
	"name": "Canvas AuTOTP",
	"version": "1.0",
	"description": "Securely autofills 2FA codes for Canvas-based sites that support ADFS",
	"author": "Perseus Lynx",
	"permissions": [
		"storage",
		"tabs"
	],
	"browser_specific_settings": {
		"gecko": {
			"id": "canvas-autotp@perseuslynx.dev",
			"strict_min_version": "67.0"
		}
	},
	"browser_action": {
		"default_popup": "form.html"
	},
	"content_scripts": [
		{
			"matches": ["*://*/adfs/ls/*"],
			"js": ["autotp.js"]
		}
	],
	"background": {
		"scripts": ["background.js"]
	}
}
